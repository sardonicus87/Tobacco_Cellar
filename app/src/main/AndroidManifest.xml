<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_*" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_*" />



    <application
        android:name=".CellarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/tc_launcher1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tc_launcher1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TobaccoCellar"
        tools:targetApi="34">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustUnspecified"
            android:label="@string/app_name"
            android:theme="@style/Theme.TobaccoCellar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>